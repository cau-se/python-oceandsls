model uvic

types
        enum FileType { f90, f }
        enum SurplusCinFood { egest, respire }

        range RangeType float [ 0 : 273 ]

        group general : "" {
                def executable_file file : "" = "UVic_ESCM"
                def libraries string[] : ""
                def compiler_f string : "" = "ifort -r8 -O3 -warn nouncalled -c"
        }

        feature generic : "" {
                group tsteps : "" {
                    def dtts float : second = 108000.0
                    def dtsf float : second = 1125.0
                    def segtim float : "" = 5.0 // 1/(coupling frequency) (d)
                }
        }
        feature even_fluxes : "Atmosphere ocean coupling. Every other flux used for conservative coupling.  See embm/embm.F and mom/mom.F."
        feature sun : "" {
           excludes super_nova
        }
        feature super_nova : ""