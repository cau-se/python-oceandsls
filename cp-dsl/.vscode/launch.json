// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: cp-dsl compiler",
      "type": "debugpy",
      "request": "launch",
      "program": "generator/__main__.py",
      "args": [
        "-i",
        "/home/reiner/Projects/OceanDSL/python-oceandsls/cp-dsl/input/testing/basic/global.oconf"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "/home/reiner/Projects/OceanDSL/python-oceandsls/cp-dsl"
      }
    }
    {
      "name": "Python Debugger: cp-dsl test",
      "type": "debugpy",
      "request": "launch",
      "program": "test/generator/visitors/declaration_visitor_test.py",
      "args": [
        "TestGeneratorDeclarationVisitor.test_visitUnitSpecification_two"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "/home/reiner/Projects/OceanDSL/python-oceandsls/cp-dsl"
      }
    }
    {
      "name": "Launch Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "outFiles": [
        "${workspaceRoot}/typescript-build/client/out/**/*.js"
      ],
      "preLaunchTask": {
        "type": "npm",
        "script": "compile"
      },
      "env": {
        "VSCODE_DEBUG_MODE": "true"
      }
    },
    {
      "name": "Launch DCL Server",
      "type": "python",
      "request": "launch",
      "module": "dclLSPServer",
      "args": [
        "--tcp"
      ],
      "justMyCode": false,
      "python": "${command:python.interpreterPath}",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/../antlrLib/"
      }
    },
    {
      "name": "Launch CONF Server",
      "type": "python",
      "request": "launch",
      "module": "conflspserver",
      "args": [
        "--tcp"
      ],
      "justMyCode": false,
      "python": "${command:python.interpreterPath}",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/../antlrLib/"
      }
    },
    {
      "name": "Launch Server [WebSockets] + print workspaceFolder",
      "type": "python",
      "request": "launch",
      "module": "dclLSPServer",
      "args": [
        "--ws"
      ],
      "justMyCode": false,
      "python": "${command:python.interpreterPath}",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "print workspaceFolder",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/../antlrLib/"
      }
    }
  ],
  "compounds": [
    {
      "name": "Server + Client",
      "configurations": [
        "Launch DCL Server",
        "Launch CONF Server",
        "Launch Client"
      ]
    },
    {
      "name": "DCL Server + Client",
      "configurations": [
        "Launch DCL Server",
        "Launch Client"
      ]
    },
    {
      "name": "CONF Server + Client",
      "configurations": [
        "Launch CONF Server",
        "Launch Client"
      ]
    }
  ]
}